<p><%= link_to 'Home > ',root_path %><%= link_to @categori.name+'> ' ,category_path%><%=link_to @product.product_name+'','' %>
<div class = "col-sm-2">
<p class = "category"> Category </p>
<div>
	<% @categorys.each do |category| %>
	<p> <%=link_to category.name ,category_path(category.id) %></p>
	<% end %>
</div>
</div>

<div class = "col-sm-10">
<p class = "title_items" > <%=@product.product_name%></p>
<div class="col-sm-4">
	<div class="item">
	<img src = '<%= @product.image %>' alt=product.img>
	<br ><span class='blue'><%=@product.product_name %> ID <%=@product.id %></span><br >
	<p><span class='red'> Price: <%= @product.price %> VND</span><br ></p>
	<span class='blue'><%=@product.created_at %></span><br >
	</div>
</div>
	<div class="col-sm-6">
	<%=form_for(@product) do |f| %>
	<%= f.text_area :description ,:id => "message_area" ,:readonly => true%>
	<%= f.submit "Mua" ,class: "btn btn-primary",:id => "submit" %>
	<% end %>
	</div>
</div>