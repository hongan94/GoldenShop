<p><%= link_to 'Home > ',root_path %><%= link_to @category.name , category_path(@category.id) %></p><br >
<div class = "col-sm-2">
<p class = "category"> Category </p>
<div>
	<% @categorys.each do |category| %>
	<p> <%=link_to category.name ,category_path(category.id) %></p>
	<% end %>
</div>
</div>

<div class = "col-sm-10">
<p class = "title_items" > <%=@category.name %></p>
	<% @product.each do |product| %>
	<div class="img">
	<img src = '<%= product.image %>' alt=product.img>
	<br ><span class='blue'><%=product.product_name %></span><br >
	<p><span class='red'> Price: <%= product.price %> VND</span><br ></p>
	</div>
	<% end %>
</div>
<div class="col-sm-12"><%= will_paginate @products%></div>